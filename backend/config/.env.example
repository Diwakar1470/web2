# MySQL Database Configuration
# Copy this file to .env and update with your actual database credentials

# Database User
DB_USER=root

# Database Password
DB_PASSWORD=your_password_here

# Database Host (localhost for local development)
DB_HOST=localhost

# Database Port (3306 is the default MySQL port)
DB_PORT=3306

# Database Name
DB_NAME=school_db

# Flask Server Port (optional, defaults to 5000)
PORT=5000
